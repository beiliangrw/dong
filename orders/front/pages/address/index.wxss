.container{
  box-sizing: border-box;
  align-items: center;
}

.item{
  display: flex;
  width:100%;
  background: white;
  box-sizing: border-box;
  padding: 10px;
  box-shadow: 3px 3px 8px #c1c1c1;
  margin-top: 10px;
  border-radius:8px;
  font-size: 12px;
  position: relative;
}

.item .top{
  display: flex;
  flex-direction: row;
}

.item .top text:nth-child(2){
  margin-left: 10px;
}

.item .address{
  margin-top: 10px;
}

.item .edit{
  position: absolute;
  right: 10px;
  bottom: 0px;
  margin-bottom: 10px;
}

.container-add{
  position: fixed;
  right: 0;
  bottom: 30px;
  padding: 14px;
  border-top-left-radius: 50%;
  border-bottom-left-radius: 50%;
  background:rgb(65,105,225);
  text-align: center;
  color: white;
}


/* 行列表 */
.nx_line {
  margin: 20rpx;
}
.nx_line_title {
  padding: 20rpx;
  color: #666;
  font-weight: bold;
  font-size: 35rpx;
  background-color: white;
  border-bottom: 1px solid #eee;
  border-radius: 10rpx 10rpx 0 0;
}
.nx_line_list {
  background-color: white;
  border-radius: 0 0 10rpx 10rpx;
}
.nx_line_list .nx_line_item {
  width: 100%;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.nx_line_left {
  flex: 2;
  display: flex;
  align-items: center;
}
.nx_line_mid {
  flex: 5;
  padding: 0 40rpx;
}
.nx_line_right {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #999;
}
.nx_line_left image {
  width: 100%;
  height: 140rpx;
}
.nx_line_left text {
  width: 80%;
  margin-left: 20rpx;
  color: #666;
}
.btn {
  font-size: 28rpx;
  border: 1rpx solid #ccc;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  background-color: #eee;
  margin: 0 10rpx;
}
