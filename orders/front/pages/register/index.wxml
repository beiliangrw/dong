<view class="login_title">欢迎注册</view>
<view class="inputView">
  <input class="imput_text" value="{{username}}" bindinput="onName" type="text" placeholder="请输入用户名" />
</view>
<view class="inputView">
  <input class="imput_text" value="{{password}}" bindinput="onPassword" password type="text" placeholder="请输入密码" />
</view>

<view class="inputView">
  <input class="imput_text" value="{{phone}}" bindinput="onPhone" type="text" placeholder="请输入手机"/>
</view>


 <!--按钮-->
 <view class="loginBtnView"> 
  <button class="loginBtn" type="primary" bindtap="register">注册</button> 
 </view> 


