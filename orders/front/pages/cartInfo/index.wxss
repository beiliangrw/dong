.custom-button {
  background-color: #2e2a29; /* 按钮背景颜色 */
  color: white; /* 字体颜色 */
  font-size: 16px; /* 字体大小 */
  padding: 10px 20px; /* 内边距 */
  border-radius: 25px; /* 圆角按钮 */
  border: none; /* 去掉边框 */
  cursor: pointer; /* 鼠标悬停时显示手指 */
  text-align: center; /* 文字居中 */
  letter-spacing: 1px; /* 字间距 */
}